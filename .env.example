# Interactive Brokers Credentials
# Get these from your IBKR account (required for IBKR data fetching)
TWS_USERNAME=your_ib_username
TWS_PASSWORD=your_ib_password
TWS_ACCOUNT=DU123456  # Your paper trading account (starts with DU for demo)

# IBKR Connection Settings
TRADING_MODE=paper  # Use 'paper' for paper trading, 'live' for real trading
IBKR_HOST=127.0.0.1  # Use 'ib-gateway' when running in Docker
IBKR_PORT=7497       # 7497=TWS paper, 7496=TWS live, 4002=Gateway paper, 4001=Gateway live
IBKR_CLIENT_ID=1

# VNC Password for IB Gateway GUI access (Docker only)
VNC_PASSWORD=password

# Database Configuration
# Local development: Use localhost
# Docker: Connection string is overridden in docker-compose.yml
DATABASE_URL=postgresql://ntrader:ntrader@localhost:5432/ntrader_dev
DATABASE_NAME=ntrader_dev
DATABASE_USER=ntrader
DATABASE_PASSWORD=ntrader
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Settings
DEBUG=false
LOG_LEVEL=INFO

# Trading Settings
DEFAULT_CURRENCY=USD
DEFAULT_BALANCE=1000000
TRADE_SIZE=1000000

# Strategy Settings
FAST_EMA_PERIOD=10
SLOW_EMA_PERIOD=20

# Data Settings
MOCK_DATA_BARS=1000
